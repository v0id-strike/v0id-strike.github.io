---
layout: layouts/base.njk
title: Void-Strike Cyber Security
---

<div class="terminal-container">
  <div class="terminal-header">
    <div class="terminal-buttons">
      <span class="terminal-button red"></span>
      <span class="terminal-button yellow"></span>
      <span class="terminal-button green"></span>
    </div>
    <span class="terminal-title">notes-tree --view=structured</span>
  </div>
  
  <div class="terminal-body">
    <h2 class="glow-text">Cyber Security Notes</h2>
    
    {% set posts = collections.posts | reverse %}
    {% set categories = {} %}
    
    {# Organize posts by category #}
    {% for post in posts %}
      {% set category = post.data.categories[0] if post.data.categories else "Uncategorized" %}
      {% if not categories[category] %}
        {% set categories = categories | merge({ [category]: [] }) %}
      {% endif %}
      {% set categories = categories | merge({ [category]: categories[category] | concat([post]) }) %}
    {% endfor %}
    
    {# Display terminal-style tree #}
    <div class="tree-view">
      {% for category, posts in categories %}
        <div class="tree-folder">
          <span class="folder-icon">üìÅ</span>
          <span class="folder-name">{{ category }}</span>
          
          <div class="tree-files">
            {% for post in posts %}
              <div class="tree-file">
                <span class="file-icon">üìÑ</span>
                <a href="{{ post.url }}" class="file-link">{{ post.data.title }}</a>
                {% if post.data.description %}
                  <span class="file-description">// {{ post.data.description }}</span>
                {% endif %}
              </div>
            {% endfor %}
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>