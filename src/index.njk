<h2>Notes</h2>

<div class="notes-tree">
{% set posts = collections.posts | reverse %}
{% set groups = {} %}

{# First, organize posts by their directory structure #}
{% for post in posts %}
    {% set path = post.filePathStem | replace('/posts/', '') | split('/') %}
    {% set group = path[0] %}
    {% if not groups[group] %}
        {% set groups = groups | merge({ [group]: [] }) %}
    {% endif %}
    {% set groups = groups | merge({ [group]: groups[group] | concat([post]) }) %}
{% endfor %}

{# Display the tree structure #}
{% for group, groupPosts in groups %}
    <div class="note-group">
        <h3 class="group-title">{{ group }}</h3>
        <div class="group-notes">
            {% for post in groupPosts %}
                <div class="note">
                    <a href="{{ post.url }}" class="note-link">{{ post.data.title }}</a>
                    {% if post.data.description %}
                        <p class="note-description">{{ post.data.description }}</p>
                    {% endif %}
                </div>
            {% endfor %}
        </div>
    </div>
{% endfor %}
</div>